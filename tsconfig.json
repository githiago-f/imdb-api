{
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowJs": false,
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
    "skipLibCheck": true
  },
  "exclude": [
    "/node_modules/**"
  ]
}
